<%- include('shared/header') %>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Segoe UI", Arial, sans-serif;
    background: #f5f7fa;
    color: #333;
    line-height: 1.5;
  }

  .main-content {
    padding: 20px;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
  }

  .header h2 {
    font-size: 22px;
  }

  .header .btn.add {
    border-radius: 5px;
    height: 30px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 700;
    text-align: center;
    width: 90px;
    background: #28a745;
    color: white;
    display: inline-flex;
    justify-content: center;
    align-items: center;
  }

  /* Card style */
  .family-card {
    background: #fff;
    padding: 15px 20px;
    border-radius: 10px;
    margin-bottom: 15px;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .family-card:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.12);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
  }

  .card-header .lineage {
    font-weight: 600;
    font-size: 16px;
  }

  .card-header .actions {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .card-header .view-btn {
    color: #0d6efd;
    text-decoration: none;
    font-weight: 500;
    font-size: 14px;
  }

  .card-header .arrow {
    font-size: 18px;
    transition: transform 0.3s ease;
  }

  .card-header.active .arrow {
    transform: rotate(90deg);
  }

  .card-body {
    display: none;
    margin-top: 10px;
    font-size: 12px;
    color: #555;
  }

  .card-body p {
    margin-bottom: 5px;
  }

  .pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 20px;
  padding: 10px 0;
  font-family: "Poppins", sans-serif;
}

.pagination a,
.pagination span {
  display: inline-block;
  padding: 8px 14px;
  border: 1px solid #ddd;
  border-radius: 6px;
  text-decoration: none;
  color: #333;
  background-color: #fff;
  transition: all 0.2s ease-in-out;
  font-size: 14px;
}

.pagination a:hover {
  background-color: #007bff;
  color: white;
  border-color: #007bff;
}

.pagination .active {
  background-color: #007bff;
  color: white;
  border-color: #007bff;
  pointer-events: none;
}

.pagination span {
  color: #555;
}

@media (max-width: 600px) {
  .pagination {
    gap: 6px;
  }

  .pagination a,
  .pagination span {
    padding: 6px 10px;
    font-size: 13px;
  }
}
</style>
  <div class="main-content">
    <div class="header">
      <h2>Family Management</h2>
      <a href="/admin/add-family" class="btn add">Add Family</a>
    </div>
  
    <% if(families.length===0){ %>
      <p style="color:red; text-align:center;">No families added yet.</p>
      <% } else { %>
        <% families.forEach(family=> { %>
          <div class="family-card">
            <div class="card-header">
              <span class="lineage">
                <%= family.lineageName %>
              </span>
              <div class="actions">
                <a href="/admin/<%= family._id %>/members" class="view-btn">View Family</a>
                <span class="arrow">&#9654;</span>
              </div>
            </div>
            <div class="card-body">
              <p><strong>Village:</strong>
                <%= family.village %>
              </p>
              <p><strong>Nyay Panchayat:</strong>
                <%= family.nyayPanchayat %>
              </p>
              <p><strong>Block:</strong>
                <%= family.block %>
              </p>
            </div>
          </div>
          <% }) %>
            <% } %>
  </div>

  <div class="pagination">
    <% if (currentPage> 1) { %>
      <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>">Prev</a>
      <% } %>
  
        <% for (let i=1; i <=totalPages; i++) { %>
          <% if (i===currentPage) { %>
            <span class="active">
              <%= i %>
            </span>
            <% } else { %>
              <a href="?page=<%= i %>&limit=<%= limit %>">
                <%= i %>
              </a>
              <% } %>
                <% } %>
  
                  <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
                    <% } %>
  </div>

  <script>
document.querySelectorAll(".card-header").forEach(header => {
  header.addEventListener("click", function() {
    const cardBody = this.nextElementSibling;
    const isOpen = cardBody.style.display === "block";

    document.querySelectorAll(".card-body").forEach(body => body.style.display = "none");
    document.querySelectorAll(".card-header").forEach(h => h.classList.remove("active"));

    if(!isOpen){
      cardBody.style.display = "block";
      this.classList.add("active");
    }
  });
});
</script>

<%- include('shared/footer') %>
