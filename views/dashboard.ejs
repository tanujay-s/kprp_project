<%- include('shared/header') %>
<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Segoe UI", Arial, sans-serif;
  background: #f5f7fa;
  color: #333;
  line-height: 1.5;
}

.main-content {
  padding: 25px;
}

.content {
  background: #fff;
  padding: 25px;
  border-radius: 10px;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease-in-out;
}

.content:hover {
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.12);
}

.content h2 {
  margin-bottom: 20px;
  font-size: 20px;
  color: #222;
  font-weight: 600;
}

table {
  width: 100%;
  border-collapse: collapse;
  font-size: 15px;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
}

thead {
  background: #f0f2f5;
}

table th, 
table td {
  padding: 14px 12px;
  text-align: center;
  border-bottom: 1px solid #e6e6e6;
}

table th {
  font-weight: 600;
  color: #444;
  text-transform: uppercase;
  font-size: 13px;
  letter-spacing: 0.5px;
}

table tr:hover td {
  background: #fafafa;
}

.view-btn {
  color: #0d6efd;
  text-decoration: none;
  font-weight: 500;
  margin-right: 12px;
  transition: color 0.3s;
}

.view-btn:hover {
  color: #084298;
  text-decoration: underline;
}

.delete-btn {
  background: #dc3545;
  color: #fff;
  border: none;
  padding: 7px 14px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  transition: background 0.3s ease-in-out;
}

.delete-btn:hover {
  background: #b02a37;
}
</style>

  <div class="main-content">

    <div class="content">
      <h2>Family Management</h2>
      <table>
        <thead>
          <tr>
            <th>CLAN NAME (वंश)</th>
            <th>VILLAGE (गांव)</th>
            <th>NYAY PANCHAYAT (न्याय पंचायत)</th>
            <th>BLOCK (ब्लॉक)</th>
            <th>OLD RESIDENCE (पूर्व निवास)</th>
            <th>ACTIONS</th>
          </tr>
        </thead>
        <tbody>
          <% if (families.length === 0) { %>
            <tr>
              <td colspan="7" style="text-align:center; color:red;">No families added yet.</td>
            </tr>
          <% } else { %>
            <% families.forEach(family => { %>
              <tr>
                <td><%= family.lineageName %></td>
                <td><%= family.village %></td>
                <td><%= family.nyayPanchayat %></td>
                <td><%= family.block %></td>
                <td><%= family.oldResidence %></td>
                <td>
                  <a href="/family/<%= family._id %>/members" class="view-btn">View Members</a>
                  <form action="/family/<%= family._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="delete-btn">Delete Family</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

<%- include('shared/footer') %>
